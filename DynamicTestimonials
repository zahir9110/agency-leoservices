import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { Star, Quote, ChevronLeft, ChevronRight, Sparkles } from 'lucide-react';
import { base44 } from '@/api/base44Client';
import { Button } from "@/components/ui/button";

const defaultTestimonials = [
  {
    client_name: "Marie Tremblay",
    company: "Clinique Santé Plus",
    role: "Directrice",
    content: "Le chatbot a révolutionné notre gestion des rendez-vous. Nous avons réduit les appels de 60% et nos patients adorent la simplicité.",
    rating: 5,
    service_used: "chatbot",
    results: "-60% d'appels"
  },
  {
    client_name: "Jean-Pierre Dubois",
    company: "Restaurant Le Gourmand",
    role: "Propriétaire",
    content: "L'automatisation de nos réservations et commandes nous fait gagner 15 heures par semaine. Un investissement qui s'est rentabilisé en 2 mois.",
    rating: 5,
    service_used: "automation",
    results: "15h/semaine économisées"
  },
  {
    client_name: "Sophie Martin",
    company: "Agence Immobilière SMC",
    role: "Fondatrice",
    content: "La prospection automatisée nous génère 30% de leads en plus. L'équipe d'Agency Leo Services est réactive et professionnelle.",
    rating: 5,
    service_used: "prospection",
    results: "+30% de leads"
  },
  {
    client_name: "Marc Bouchard",
    company: "Cabinet Comptable MB",
    role: "Associé",
    content: "Grâce aux intégrations sur-mesure, tous nos outils communiquent enfin ensemble. Fini les doubles saisies et les erreurs!",
    rating: 5,
    service_used: "integration",
    results: "0 double saisie"
  },
  {
    client_name: "Émilie Gagnon",
    company: "Studio Yoga Zen",
    role: "Gérante",
    content: "Le système de rendez-vous automatisé a transformé mon quotidien. Mes clients peuvent réserver 24/7 et je reçois moins d'appels.",
    rating: 5,
    service_used: "rdv",
    results: "Réservations 24/7"
  }
];

const serviceLabels = {
  chatbot: "Chatbot IA",
  automation: "Automatisation",
  prospection: "Prospection",
  rdv: "Gestion RDV",
  integration: "Intégrations",
  all: "Solution complète"
};

export default function DynamicTestimonials({ filterService = null }) {
  const [testimonials, setTestimonials] = useState(defaultTestimonials);
  const [currentIndex, setCurrentIndex] = useState(0);
  const [isAutoPlaying, setIsAutoPlaying] = useState(true);

  useEffect(() => {
    const loadTestimonials = async () => {
      try {
        const query = { is_approved: true };
        if (filterService) {
          query.service_used = filterService;
        }
        const data = await base44.entities.Testimonial.filter(query, '-created_date', 10);
        if (data && data.length > 0) {
          setTestimonials(data);
        }
      } catch (error) {
        // Use default testimonials
      }
    };
    loadTestimonials();
  }, [filterService]);

  useEffect(() => {
    if (!isAutoPlaying) return;
    const interval = setInterval(() => {
      setCurrentIndex((prev) => (prev + 1) % testimonials.length);
    }, 5000);
    return () => clearInterval(interval);
  }, [isAutoPlaying, testimonials.length]);

  const goTo = (index) => {
    setCurrentIndex(index);
    setIsAutoPlaying(false);
    setTimeout(() => setIsAutoPlaying(true), 10000);
  };

  const next = () => goTo((currentIndex + 1) % testimonials.length);
  const prev = () => goTo((currentIndex - 1 + testimonials.length) % testimonials.length);

  const current = testimonials[currentIndex];

  return (
    <section className="py-20 lg:py-28 relative overflow-hidden">
      <div className="absolute inset-0 bg-gradient-to-b from-[#0a0a0a] via-[#0f0f0f] to-[#0a0a0a]" />
      
      <div className="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <motion.div
          className="text-center mb-12"
          initial={{ opacity: 0, y: 20 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true }}
        >
          <span className="inline-block px-4 py-2 mb-4 text-sm font-semibold text-[#00ff41] bg-[#00ff41]/10 border border-[#00ff41]/30 rounded-full uppercase tracking-wider">
            <Sparkles className="inline w-4 h-4 mr-2" />
            Témoignages Clients
          </span>
          <h2 className="text-3xl sm:text-4xl lg:text-5xl font-black mb-4">
            Ils nous font <span className="text-[#00ff41]">Confiance</span>
          </h2>
          <p className="text-gray-400 text-lg">
            Découvrez les résultats obtenus par nos clients
          </p>
        </motion.div>

        <div className="relative">
          <AnimatePresence mode="wait">
            <motion.div
              key={currentIndex}
              initial={{ opacity: 0, x: 50 }}
              animate={{ opacity: 1, x: 0 }}
              exit={{ opacity: 0, x: -50 }}
              transition={{ duration: 0.3 }}
              className="bg-[#1a1a1a] border border-[#2a2a2a] rounded-3xl p-8 sm:p-12 relative"
            >
              <Quote className="absolute top-6 left-6 w-12 h-12 text-[#00ff41]/20" />
              
              <div className="flex flex-col lg:flex-row gap-8 items-center">
                <div className="flex-1">
                  <div className="flex mb-4">
                    {[...Array(current.rating || 5)].map((_, i) => (
                      <Star key={i} className="w-5 h-5 text-[#00ff41] fill-[#00ff41]" />
                    ))}
                  </div>
                  
                  <p className="text-xl sm:text-2xl text-gray-200 mb-6 italic leading-relaxed">
                    "{current.content}"
                  </p>
                  
                  <div className="flex items-center gap-4">
                    <div className="w-14 h-14 rounded-full bg-gradient-to-br from-[#00ff41] to-[#00cc33] flex items-center justify-center text-black font-bold text-xl">
                      {current.client_name?.charAt(0)}
                    </div>
                    <div>
                      <div className="font-bold text-white text-lg">{current.client_name}</div>
                      <div className="text-gray-400">{current.role} - {current.company}</div>
                    </div>
                  </div>
                </div>

                <div className="lg:w-64 flex-shrink-0">
                  <div className="bg-[#00ff41]/10 border border-[#00ff41]/30 rounded-2xl p-6 text-center">
                    <div className="text-sm text-gray-400 mb-2">Résultat obtenu</div>
                    <div className="text-3xl font-black text-[#00ff41] mb-2">
                      {current.results || "Succès"}
                    </div>
                    <div className="text-xs text-gray-500 bg-[#2a2a2a] rounded-full px-3 py-1 inline-block">
                      {serviceLabels[current.service_used] || "Service"}
                    </div>
                  </div>
                </div>
              </div>
            </motion.div>
          </AnimatePresence>

          {/* Navigation */}
          <div className="flex items-center justify-center gap-4 mt-8">
            <Button
              variant="outline"
              size="icon"
              onClick={prev}
              className="border-[#2a2a2a] text-gray-400 hover:text-[#00ff41] hover:border-[#00ff41]"
            >
              <ChevronLeft className="w-5 h-5" />
            </Button>
            
            <div className="flex gap-2">
              {testimonials.map((_, index) => (
                <button
                  key={index}
                  onClick={() => goTo(index)}
                  className={`w-3 h-3 rounded-full transition-all ${
                    index === currentIndex 
                      ? 'bg-[#00ff41] w-8' 
                      : 'bg-[#2a2a2a] hover:bg-[#3a3a3a]'
                  }`}
                />
              ))}
            </div>
            
            <Button
              variant="outline"
              size="icon"
              onClick={next}
              className="border-[#2a2a2a] text-gray-400 hover:text-[#00ff41] hover:border-[#00ff41]"
            >
              <ChevronRight className="w-5 h-5" />
            </Button>
          </div>
        </div>
      </div>
    </section>
  );
}
